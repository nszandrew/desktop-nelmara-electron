{
  "name": "nelmara-desktop",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "build": "vite build",
    "package": "electron-builder"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "framer-motion": "^12.18.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.5.0",
    "react-pdf": "^10.0.1",
    "react-router-dom": "^7.6.2"
  },
  "devDependencies": {
    "concurrently": "^8.0.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "vite": "^5.0.0",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.nelmara.desktop",
    "productName": "NelmaraApp",
    "files": [
      "dist/**/*",
      "main.js",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
