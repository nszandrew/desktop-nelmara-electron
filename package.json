{
  "name": "nelmara-desktop",
  "version": "1.0.0",
  "description": "Desktop app for Nelmara",
  "author": "Seu Nome",
  "main": "main.js",
  "scripts": {
    "dev": "concurrently \"npm run vite\" \"wait-on http://localhost:5173 && electron .\"",
    "vite": "vite",
    "build": "vite build",
    "electron": "electron .",
    "make": "npm run build && electron-builder --win",
    "dist": "npm run build && electron-builder --win"
  },
  "build": {
    "appId": "com.nelmara.desktop",
    "productName": "Nelmara Desktop",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    }
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.0.0",
    "concurrently": "^8.0.0",
    "electron": "^25.0.0",
    "electron-builder": "^24.0.0",
    "vite": "^4.0.0",
    "wait-on": "^7.0.0"
  },
  "dependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "electron-updater": "^6.0.0"
  }
}