{
  "name": "nelmara-desktop",
  "version": "1.0.1",
  "main": "main.js",
  "scripts": {
    "dev": "concurrently -k \"vite\" \"electron .\"",
    "build": "vite build",
    "package": "electron-forge package",
    "start": "electron-forge start",
    "make": "vite build && electron-forge make"
  },
  "build": {
    "appId": "com.nelmara.desktop",
    "productName": "Nelmara Desktop",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    }
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.0.0",
    "concurrently": "^8.0.0",
    "electron": "^25.0.0",
    "electron-builder": "^24.0.0",
    "vite": "^4.0.0",
    "wait-on": "^7.0.0"
  },
  "dependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "electron-updater": "^6.0.0"
  }
}